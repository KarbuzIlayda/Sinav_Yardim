<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/cobalt_blue"
    tools:context=".ProfilAltMenu">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        app:cardCornerRadius="12dp"
        android:layout_margin="10dp"
        android:id="@+id/cv_cikisyap"
        android:focusable="true">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/cikis_yap"
            android:textSize="26sp"
            android:textColor="@color/black"
            android:paddingStart="10dp"
            android:drawablePadding="10dp"
            app:drawableStartCompat="@drawable/baseline_power_settings_new_24" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        app:cardCornerRadius="12dp"
        android:layout_margin="10dp"
        android:id="@+id/cv_hesapsil"
        android:focusable="true">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/hesabi_sil"
            android:textSize="26sp"
            android:textColor="@color/black"
            android:paddingStart="10dp"
            android:drawablePadding="10dp"
            app:drawableStartCompat="@drawable/baseline_delete_24" />
    </androidx.cardview.widget.CardView>

</LinearLayout>