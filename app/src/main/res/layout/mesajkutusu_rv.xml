<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/mesajkutulari_arka"
        app:cardBackgroundColor="#E6E6FA"
        android:id="@+id/cv_okunmusmesaj"
        android:visibility="visible" >

        <androidx.cardview.widget.CardView
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:cardCornerRadius="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp" >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/mesajalicipp"
                android:scaleType="fitCenter"
                android:background="@drawable/baseline_person_3_24" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/mesajaliciad"
            android:textColor="@color/black"
            android:hint="Kullaniciadi"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="110dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:id="@+id/gelensonmesaj"
            android:hint="son mesaj"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:layout_marginTop="45dp"
            android:layout_marginStart="110dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:hint="gonderilme tarihi"
            android:textSize="15sp"
            android:layout_gravity="end|bottom"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:id="@+id/goruldugonderilmetarihi" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/mesajkutulari_arka"
        app:cardBackgroundColor="#6A5ACD"
        android:id="@+id/cv_okunmamismesaj"
        android:visibility="visible" >

        <androidx.cardview.widget.CardView
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:cardCornerRadius="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp" >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/mesajgormedipp"
                android:scaleType="fitCenter"
                android:background="@drawable/baseline_person_3_24" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/mesajgormediad"
            android:textColor="@color/white"
            android:hint="Kullaniciadi"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="110dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:id="@+id/gorulmemissonmesaj"
            android:hint="son mesaj"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:layout_marginTop="45dp"
            android:layout_marginStart="110dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:hint="gonderilme tarihi"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:layout_gravity="end|bottom"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:id="@+id/gorulmedigonderilmetarihi"/>

    </androidx.cardview.widget.CardView>

</LinearLayout>